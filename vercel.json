{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/spa",
  "functions": {
    "api/index.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/:path((?!_next|api|assets|public|favicon|robots|sitemap).)*",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "destination": "/:path*",
      "permanent": false
    }
  ]
}
